{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2021",
      "dom"
    ],
    "types": [
      "cypress",
      "node",
      "cypress-real-events"
    ],
    "baseUrl": "./",
    "paths": {
      "@fixtures/*": [
        "cypress/fixtures/*"
      ],
      "@support/*": [
        "cypress/support/*"
      ],
      "@scripts/*": [
        "workshop-scripts/*"
      ]
    },
    "allowJs": false,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ]
}